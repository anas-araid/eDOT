<p>
  <strong>Patient ID:</strong>
  <%= @report.patient_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @report.patient.name %>
</p>

<p>
  <strong>Surname:</strong>
  <%= @report.patient.surname %>
</p>

<p>
  <strong>Address:</strong>
  <%= @report.patient.address %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @report.patient.gender %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @report.patient.birthdate %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @report.patient.phone %>
</p>

<p>
  <strong>Compiled by:</strong>
  <%= "#{@report.user.name} #{@report.user.surname}" %>
</p>

<p>
  <strong>Compiler ID:</strong>
  <%= @report.user.id %>
</p>

<p>
  <strong>Date:</strong>
  <%= @report.date %>
</p>

<p>
  <strong>Health status:</strong>
  <%= @report.health_status %>
</p>

<div id ="buttons_div">
  <%= link_to edit_patient_report_path(@report.patient, @report) do %>
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-color--teal-400 mdl-color-text--cyan-50" id="form_button">
        <i class="material-icons">mode_edit</i>
    </button>
  <% end %>

  <%= link_to patient_url(@patient), method: :delete, data: { confirm: 'Are you sure?' } do %>
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-color--red mdl-color-text--cyan-50" id="form_button">
        <i class="material-icons">delete</i>
    </button>
  <% end %>

  <%= link_to patient_report_path(format: :csv) do %>
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-color--indigo mdl-color-text--cyan-50" id="form_button">
        <i class="material-icons">file_download</i>
    </button>
  <% end %>

  </div>


<%= link_to 'Back', patient_reports_path(@report.patient) %>
