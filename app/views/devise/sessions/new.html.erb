<div align="center">
<div><h2 style= "color:teal; text-align:center; font-size:90px">Login</h2></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.email_field :email, :class => "mdl-textfield__input", :id => "email"%>
      <%= f.label :email, :class => "mdl-textfield__label", :for => "email"%>
    </div>
  <br/>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password,  :class => "mdl-textfield__input", :id => "password"%>
    <%= f.label :password, :class => "mdl-textfield__label", :for => "password", autocomplete: "off"%>
  </div>
  <br/>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
